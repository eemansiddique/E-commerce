     <section class="shopping-cart">
        <h1 class="title">My Wishlist</h1>
        <% if (list !== null) { %>
            <% if (list.wishlist.length > 0) { %>
                <div class="box-container w-100">
                    <div class="wish-box row">
                        <% list.wishlist.forEach(function(w) { %>
                            <% if (w.product) { %>
                                <div class="box col-md-5 col-lg-3">
                                    <img src="/public/images/product-img/<%= w.product.image %>" alt="">
                                    <h3><%= w.product.title || 'Unknown Title' %></h3>
                                    <div class="price">₹ <%= w.product.price || 'Unknown Price' %></div>
                                    <button class="btn" onclick="addToCartAndRemove('<%= w.product._id %>')">Add to Cart</button>
                                    <button class="confirmDeletion" onclick="removeFromWishlist('<%= w.product._id %>')">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            <% } else { %>
                                <!-- Display default content for null products -->
                                <div class="box col-md-5 col-lg-3">
                                    <p>Product not available</p>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                </div>
            <% } else { %>
                <h2 class="text-center pt-5">Wishlist is empty</h2>
            <% } %>
        <% } else { %>
            <h2 class="text-center pt-5">Wishlist is empty</h2>
        <% } %>
    </section>
    
    <%- include('../layouts/user-footer.ejs') %>